{
  "manifest_version": 3,
  "name": "AnomTube - Audio Only YouTube with Live Lyrics",
  "version": "2.0.0",
  "description": "Blocks YouTube videos and plays only audio with karaoke-style live lyrics",
  "author": "jugi@AnomFIN",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googleapis.com/*",
    "https://lrclib.net/*",
    "https://api.lyrics.ovh/*",
    "https://some-random-api.ml/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "src/content/settings-apply.js",
        "src/content/adSkipper.js",
        "src/content/lyricHandler.js",
        "src/content/main.js",
        "content.js"
      ],
      "css": [
        "src/css/toolbar.css",
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "AnomTube Controls",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["asd.png", "logo.png", "logo_ANOMFIN_AUTOMATED_AI.png"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
